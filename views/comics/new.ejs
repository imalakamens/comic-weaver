<%- include('../partials/header') %> 
    <div id="title">
        <h1><%= title %></h1>
    </div>
    <form action="/comics" method="POST" class="new-form">
    <label for="title">-Title-</label>
    <input type="text" name="title" required>
    <br><label for="issueNum">-Issue/Trade #-</label>
    <input type="text" name="issueNum">

    <br><label for="writers">-Writer-</label>
        <select name="writers">
            <option disabled selected value style="display:none">choose from list or add above</option>
            <%- writers.map(w => `<option value="${w._id}">${w.name}</option>`).join('') %>
        </select>
        <br><label for="artists">-Artist-</label>
        <select name="artists">
            <option disabled selected value style="display:none">choose from list or add above</option>
            <%- artists.map(a => `<option value="${a._id}">${a.name}</option>`).join('') %>
        </select>
    <input type="submit" value="Add Comic">
    </form>

<%- include('../partials/footer') %> 